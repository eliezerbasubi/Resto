<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/resto_logo"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp">


            <TextView
                android:id="@+id/resto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Resto Divine"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/resto_name"
                android:text="Order food online before reaching our restaurant"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt1"
                android:text="Reserve your table when you are still home"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"/>

            <Button
                android:id="@+id/get_started_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:padding="15dp"
                android:text="get started"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_style"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>